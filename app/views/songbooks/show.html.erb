<h1><%= @songbook.name %> has <%= number_with_delimiter(@songbook.songs.count, delimiter: ',') %> songs</h1>

<div class="row">
  <div class="span6">
    <h6>Results</h6>
  </div>
  <div class="span6">
    <div style="float: right;" class="input-append">
      <input class="span2" id="appendedInputButton" type="text">
      <button class="btn" type="button">Search!</button>
    </div>
  </div>
</div>
<div class="row">
  <div class="span12">
    <table id="songbook-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
        <tr><th>Artist</th><th>Title</th><th>Brand</th></tr>
      </thead>
      <tbody>
        <% @songbook.songs.first(25).each do |song| %>
        <tr>
          <td><%= song.artist %></td>
          <td><%= song.title %></td>
          <td><%= song.brand %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

