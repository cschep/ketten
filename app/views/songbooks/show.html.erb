<h1><%= @songbook.name %> has <%= number_with_delimiter(@songbook.songs.count, :delimiter => ',') %> songs</h1>

<div class="row">
  <div class="span12">
    <h6>Results</h6>
    <div class="well songbook-panel">
      <div class="spinner"></div>
      <table id="songbook-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
          <tr><th>Artist</th><th>Title</th></tr>
        </thead>
        <tbody id="songbook-table-body">
          <% @songbook.songs.each do |song| %>
            <tr><td><%= song.artist %></td><td><%= song.title %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
